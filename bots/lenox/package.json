{
  "name": "lenox-bot",
  "version": "1.0.0",
  "description": "An advanced Botpress chatbot with GPT integration and multilingual support",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc && node build.js",
    "start": "node dist/index.js",
    "test": "jest",
    "dev": "nodemon --watch 'src/**/*' --exec 'ts-node' src/index.ts",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "axios": "1.6.1",
    "cheerio": "1.0.0-rc.3",
    "@google-cloud/translate": "6.0.0",
    "i18n": "0.13.2",
    "botpress/sdk": "0.5.2",  
    "node-cache": "5.1.2"    
  },
  "devDependencies": {
    "@types/node": "18.11.17",
    "typescript": "4.9.4",
    "eslint": "7.32.0",
    "prettier": "2.3.2",
    "nodemon": "2.0.7",
    "ts-node": "9.1.1",
    "jest": "26.6.3",
    "ts-jest": "26.5.6",    
    "semver": "7.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "license": "MIT"
}
